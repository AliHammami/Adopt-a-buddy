{% extends 'base.html.twig' %}

{% block title %}Association index{% endblock %}

{% block body %}
    <h1>Association index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Password</th>
                <th>Email</th>
                <th>Rna</th>
                <th>Manager</th>
                <th>Phone</th>
                <th>Website</th>
                <th>Facebook</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for association in associations %}
            <tr>
                <td>{{ association.id }}</td>
                <td>{{ association.name }}</td>
                <td>{{ association.password }}</td>
                <td>{{ association.email }}</td>
                <td>{{ association.rna }}</td>
                <td>{{ association.manager }}</td>
                <td>{{ association.phone }}</td>
                <td>{{ association.website }}</td>
                <td>{{ association.facebook }}</td>
                <td>{{ association.description }}</td>
                <td>{{ association.photo }}</td>
                <td>{{ association.createdAt ? association.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('association_show', {'id': association.id}) }}">show</a>
                    <a href="{{ path('association_edit', {'id': association.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('association_new') }}">Create new</a>
{% endblock %}
